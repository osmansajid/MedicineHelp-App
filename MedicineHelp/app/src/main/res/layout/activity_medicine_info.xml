<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
android:background="#FFFFF0"
    tools:context=".MedicineInfoActivity">


    <LinearLayout

        android:padding="10dp"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:background="#F3F3C1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="#2F4F4F" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:errorEnabled="true"
            android:gravity="center">

            <AutoCompleteTextView
                android:padding="10dp"
                android:id="@+id/editText3"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:completionThreshold="1"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:hint="Enter medicine name"
                tools:drawableLeft="@drawable/ic_search_black_24dp" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:text="Search"
            android:textColor="@color/backgroundcolor"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF" />


    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#E9FAFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Photo"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="#2F4F4F" />

        <android.support.v7.widget.CardView
            android:id="@+id/photoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="100dp">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/research"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>