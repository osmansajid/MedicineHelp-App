<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >
<android.support.v7.widget.CardView
    android:id="@+id/CardId"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#AED6F1"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:padding="15dp">
    <LinearLayout
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:paddingBottom="100dp">
        <ImageView
            android:src="@drawable/pills"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:weightSum="7"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="40dp"
            android:text="Medicine : Acifix"
            android:id="@+id/tvmed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="Doctor: Dr. ABC"
            android:id="@+id/tvdoc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="Start Date: 11/02/2018"
            android:id="@+id/tvstdate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="End Date: 11/02/2018"
            android:id="@+id/tvendate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="Morning Time: 8.00"
            android:id="@+id/tvmtime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="Afternoon Time: 14.00"
            android:id="@+id/tvatime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray" />
        <TextView
            android:layout_marginLeft="40dp"
            android:text="Afternoon Time: 20.00"
            android:id="@+id/tvntime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>